   "source": [
    "import numpy as np\n",
    "\n",
    "X = np.zeros((100, 3))\n",
    "\n",
    "# Compute the mean of the data\n",
    "mean_vec = np.mean(X, axis=0)\n",
    "\n",
    "# Compute the covariance matrix\n",
    "cov_mat = (X - mean_vec).T.dot((X - mean_vec)) / (X.shape[0]-1)\n",
    "\n",
    "\n",
    "# OR we can do this with one line of numpy:\n",
    "cov_mat = np.cov(X.T)"
   ]
